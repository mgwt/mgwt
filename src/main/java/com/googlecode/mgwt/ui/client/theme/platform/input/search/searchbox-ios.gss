.mgwt-SearchBox {
  background-color: #b0b4c0;
  background-size: 100% 44px;
  background-repeat: repeat;
  background-position: 0 0;
}

@if (is("user.agent", "safari")) {
  .mgwt-SearchBox {
    background-color: #c9c9ce;
  }
}

@if (is("user.agent", "gecko1_8")) {
  .mgwt-SearchBox {
    background-image: -moz-linear-gradient(bottom, #A8ACB9, #eee);
  }
}

@if (is("user.agent", "ie9") || is("user.agent", "ie10")) {
  .mgwt-SearchBox {
    background: url(data:image/svg+xml;base64,);
  }
}

.mgwt-SearchBox-round {
  height: 30px;
  border: none;
  border-radius: 4px;
  background-color: white;
}

.mgwt-SearchBox-input {
  font-family: HelveticaNeue-Light;
  font-size: 16px;
  color: #64636b;
  top: 2px;
}

.mgwt-SearchBox-icon {
  top: 10px;
  left: 8px;
}

@if (is("mgwt.density", "high")) {
  .mgwt-SearchBox-icon {
    -webkit-mask-size: 17px 17px;
  }
}

@if (is("mgwt.density", "xhigh")) {
  .mgwt-SearchBox-icon {
    -webkit-mask-size: 12px 12px;
  }
}

.mgwt-SearchBox-clear {
  top: 1px;
  right: 0;
}

@if (is("mgwt.density", "high")) {
  .mgwt-SearchBox-clear {
    -webkit-mask-size: 19px 19px;
  }
}

@if (is("mgwt.density", "xhigh")) {
  .mgwt-SearchBox-clear {
    -webkit-mask-size: 14px 14px;
  }
}
